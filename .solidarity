{
  "config": {
    "output": "verbose"
  },
  "requirements": {
    "Git email": [
      {
        "rule": "shell",
        "command": "git config user.email",
        "match": "^(.*?@vllc.dev)",
        "error": "Expected your email to end with @vllc.dev"
      }
    ],
      "Node": {
        "rule": "shell",
        "command": "node ./src/js/solidarity/check-node-version.js",
        "platform": [
          "macos",
          "linux"
        ],
        "match": "^OK:",
        "ci": true,
        "fix": "mise use node@$(cat .node-version 2>/dev/null || echo '')"
      }
  }
}
